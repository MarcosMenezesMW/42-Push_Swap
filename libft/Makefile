
FLAGS 		=	-Wall -Wextra -Werror

CC 			=	clang

NAME		=	libft.a

SRC_FILES 	=	ft_atoi.c ft_isascii.c ft_memcmp.c ft_strchr.c ft_strlen.c \
				ft_substr.c ft_bzero.c ft_isdigit.c ft_memcpy.c ft_strdup.c \
				ft_strncmp.c ft_tolower.c ft_calloc.c ft_isprint.c ft_memmove.c \
				ft_strjoin.c ft_strnstr.c ft_toupper.c ft_isalnum.c ft_memccpy.c \
				ft_memset.c ft_strlcat.c ft_strrchr.c ft_isalpha.c ft_memchr.c \
				ft_strlcpy.c ft_strtrim.c ft_split.c ft_itoa.c ft_strmapi.c \
				ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c 

BONUS_FILES	=	ft_lstnew.c ft_lstadd_front.c ft_lstsize.c ft_lstlast.c ft_lstadd_back.c \
				ft_lstdelone.c ft_lstclear.c ft_lstiter.c ft_lstmap.c

SRCS 		=	$(SRC_FILES)

BONUS_SRCS	=	$(BONUS_FILES)

OBJS 		=	$(SRCS:c=o)

BONUS_OBJS	=	$(BONUS_SRCS:c=o)

all: $(NAME)

$(NAME): $(OBJS)
	@ar rcs $(NAME) $(OBJS)

bonus: $(BONUS_OBJS) $(NAME)
	@ar rcs $(NAME) $(BONUS_OBJS)

%.o: %.c
	@clang $(FLAGS) -I /libft -c $< -o $@
	@echo "$@ created from $<"

clean:
	@rm -f $(OBJS)
	@rm -f $(BONUS_OBJS)
	@echo "OBJECTS deleted"

fclean: clean
	@rm -f $(NAME)
	@echo "$(NAME) deleted"

re: fclean all

.PHONY = all clean fclean re
